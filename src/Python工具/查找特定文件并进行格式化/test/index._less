.modify-phone {
  &-content {
    margin-top: 20px;
    :global(.asider-gold-card-adbox) {
      margin-bottom: 16px;
      border-radius: 6px;
      overflow: hidden;
    }
    .actions-block {
      margin-top: 40px;
    }
    :global(.ant-input-group input:hover) {
      border-color: #d8d8d8;
      box-shadow: none;
    }
    :global(.ant-input-group input:focus) {
      border-color: #d8d8d8;
      box-shadow: none;
    }
    :global(.ant-input-focused, .ant-input:hover) {
      box-shadow: none;
    }
    :global(.ant-input-focused, .ant-input:focus) {
      box-shadow: none;
    }
  }
}
